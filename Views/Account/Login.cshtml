@model LoginProject.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100 bg-color-container">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white">
                    <div class="card-body p-5 text-center round-border">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase h2">@ViewData["Title"]</h2>
                            <p class="text-white-50 mb-5">Please enter your username and password!</p>

                            <form asp-action="Login">
                                <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group form-outline form-white mb-4">
                                    <label asp-for="Username" class="form-label h4"> </label>
                                    <input asp-for="Username" class="form-control form-control-lg bg-color-input"/>
                                    <span asp-validation-for="Username" class="text-danger">  </span>
                                </div>

                                <div class="form-group form-outline form-white mb-4">
                                    <label asp-for="Password" class="form-label h4"> </label>
                                    <input asp-for="Password" class="form-control form-control-lg bg-color-input"/>
                                    <span asp-validation-for="Password" class="text-danger">  </span>
                                </div>

                                <div class="form-group pt-1 mb-4">
                                    <input type="submit" value="Login" class="btn btn-outline-light btn-lg px-5" />
                                </div>
                            </form>

                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <p>@ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
